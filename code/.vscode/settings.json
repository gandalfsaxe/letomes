{
  "editor.rulers": [88],

  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  "python.formatting.provider": "black",

  "[markdown]": {
    "editor.detectIndentation": true,
    "editor.tabSize": 2
  },

  "cSpell.words": ["celestials"]
}
