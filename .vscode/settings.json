{
  // TERMINAL
  "terminal.integrated.cwd": "code/",

  // PYTHON
  "python.formatting.provider": "black",
  "editor.rulers": [88], // default for python formatter black
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": false
    }
  },
  // Disable warnings unused imports (Oisin insists in import * :P)
  "python.linting.pylintArgs": [
    "--disable=W0614"
],
  // PYTHON UNIT TEST
  "python.unitTest.pyTestEnabled": true,
  "python.unitTest.pyTestArgs": ["code"], // only looks for unit tests in ./code/

  // LATEX WORKSHOP
  // Ignore underfull or overfull \hbox, last resort
  // "latex-workshop.message.badbox.show": false,

  // MARKDOWN
  "[markdown]": {
    "editor.tabSize": 2
  },
  // MARKDOWN PREVIEW ENHANCED
  // "markdown-preview-enhanced.pandocMarkdownFlavor": "markdown", TODO: needed or not?
  "markdown-preview-enhanced.pandocArguments": "--filter=pandoc-crossref, --filter=pandoc-citeproc, --filter=pandoc-latex-newpage",
  "markdown-preview-enhanced.usePandocParser": true, // render with pandoc instead of remarkable
  "pandoc.pdfOptString": "-F pandoc-crossref -F pandoc-citeproc -F pandoc-latex-newpage",
  // MARKDOWNLINT
  "markdownlint.config": {
    "MD033": false, // disable no-inline-html (allow HTML code)
    "MD026": {
      "punctuation": ".,;:!"
    }, // change no-trailing-punctuation (allow "?" in headers)
    "MD040": false // disable fenced-code-language (allow no langauge to be specified)
  },

  // SPELL RIGHT
  "spellright.language": "en",
  "spellright.documentTypes": [
    // "markdown",
    "plaintext"
    // "latex"
  ],

  // CODE SPELL CHECKER
  "cSpell.enabled": true,
  "cSpell.dictionaries": ["en", "latex", "html"],
  // Enable / disable by language
  "cSpell.enabledLanguageIds": [
    "latex",
    "python",
    // --MISC-- (probably not used)
    "asciidoc",
    "c",
    "cpp",
    "csharp",
    "css",
    "go",
    "handlebars",
    "html",
    "jade",
    "javascript",
    "javascriptreact",
    "json",
    "less",
    "markdown",
    "php",
    "plaintext",
    "pub",
    "restructuredtext",
    "rust",
    "scss",
    "text",
    "typescript",
    "typescriptreact",
    "yml"
  ],
  // Define dictionary for latex template
  "cSpell.dictionaryDefinitions": [
    {
      "name": "lauersens-cspell",
      "path": ".vscode/lauersens-cspell.txt"
    }
  ],
  // Activate dictionary for latex template, for latex and markdown
  "cSpell.languageSettings": [
    {
      "languageId": "latex, markdown",
      "dictionaries": ["lauersens-cspell"]
    },
    {
      "languageId": "markdown",
      "ignoreRegExpList": ["\\[@.+\\]/g"] // ignore pandoc-citeproc citations
    }
  ],
  "cSpell.words": [
    "GPUs",
    "Hohmann",
    "LETO",
    "LETOs",
    "Salimans",
    "Saxe",
    "Slingshooters",
    "St√∂rmer",
    "Texmaker",
    "Verlet",
    "analyticals",
    "architectured",
    "celestials",
    "corotating",
    "dimensionalities",
    "ephemerides",
    "hohmann",
    "hyperparameters",
    "integrators",
    "mkdir",
    "mplot",
    "nondim",
    "nondimensionalization",
    "nondimensionalized",
    "numba",
    "numpy",
    "orbsim",
    "parallelizable",
    "parallelization",
    "pdot",
    "performant",
    "pykep",
    "pyplot",
    "pytest",
    "siunitx",
    "stepsize",
    "symplectic",
    "symplectically",
    "trimmarks",
    "verlet",
    "xlabel",
    "xlim",
    "xmax",
    "xmin",
    "ylabel",
    "ylim",
    "ymax",
    "ymin",
    "yscale"
  ]
}
